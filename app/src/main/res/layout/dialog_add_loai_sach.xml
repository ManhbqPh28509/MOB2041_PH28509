<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:theme="@style/BottomNavigationViewTheme">
    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm loại sách"
        android:textSize="25dp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:layout_marginTop="20dp" >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Loại Sách:"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_AddMaLoaiSach"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_edittext"
            android:hint="Nhập Loại Sách..."
            android:textColorHint="#919191"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/options_container"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_CancelDialogAddLoaiSach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_button1"
            app:backgroundTint="@null"
            android:text="Cancel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_AddDiaLogAddLoaiSach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm"
            android:background="@drawable/custom_button1"
            app:backgroundTint="@null"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>